<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:randomText="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.sample.TextRandomView
        android:id="@+id/tv_anim_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        randomText:autoStart="true"
        randomText:rules="@string/rules"
        randomText:template="@string/template" />

    <com.sample.TextRandomView
        android:id="@+id/tv_anim_1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.sample.TextRandomView
        android:id="@+id/tv_anim_2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/b_start_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/b_stop_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop" />
</LinearLayout>
